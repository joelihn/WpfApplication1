                    --><!--<Image Source="/fMRISystem;component/Resources/AD.png" Margin="50,20,0,0" />--><!--

                    <Grid>
                        <TextBlock Text="" Name="StatusText" Style="{StaticResource TextBlockStyle4}" TextAlignment="Center" TextWrapping="Wrap" Margin="5,20,0,0" ></TextBlock>
                        <gifLib:GifImage Width="30"  Visibility="Hidden"  Name="loading"  Margin="158,5,0,0" Source="/fMRISystem;component/Resources/loading.gif" Stretch="Uniform"/>
                        --><!--<MediaElement  Margin="50,8,72,0" Name="myGif" MediaEnded="myGif_MediaEnded" UnloadedBehavior="Manual"  Source="file://d:\gif006.gif" LoadedBehavior="Play" Stretch="None"/>--><!--
                        <Image Visibility="Hidden" Width="30"  Name="loadover"  Source="/fMRISystem;component/Resources/approve.png" Margin="158,5,0,0" />
                        <Image Visibility="Hidden" Width="30"  Name="warming"  Source="/fMRISystem;component/Resources/warming.png" Margin="158,5,0,0" />

                    </Grid>

                </Border>-->
               
                <Button Style="{StaticResource ButtonStyle1}" Name="InitButton" Grid.Row="0" Click="InitButton_Click"  ContentTemplate="{DynamicResource InitMain}">
                </Button>
                <Button Style="{StaticResource ButtonStyle1}" Name="OrderButton" Grid.Row="1" Click="OrderButton_Click"  ContentTemplate="{DynamicResource OrderMain}">
                </Button>
                <Button Style="{StaticResource ButtonStyle1}" Name="SheduleButton" Grid.Row="2" Click="SheduleButton_Click"  ContentTemplate="{DynamicResource SheduleMain}">
                </Button>
                <Button Style="{StaticResource ButtonStyle1}" Name="BedButton" Grid.Row="3" Click="BedButton_Click"  ContentTemplate="{DynamicResource BedMain}">
                </Button>
                <Button Style="{StaticResource ButtonStyle1}" Name="ConfigButton" Grid.Row="4" Click="ConfigButton_Click"  ContentTemplate="{DynamicResource ConfigMain}">
                </Button>
                <Button Style="{StaticResource ButtonStyle1}" Name="CloseButton" Grid.Row="5" Click="CloseButton_Click"  ContentTemplate="{DynamicResource CloseMain}">
                </Button>
                <ContentControl Name="RightContent" Grid.Column="1"  Grid.RowSpan="7" Foreground="GreenYellow"></ContentControl>
                <ListBox Name="TopMenuListBox" Grid.Column="2" Grid.RowSpan="6" />
            </Grid>
    </Viewbox>
    </Grid>
</Window>
